# Service Desk Platform - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# SECURITY (REQUIRED for production)
# ===========================================
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=your-very-secure-jwt-secret-key-at-least-32-characters-long

# ===========================================
# DATABASE (Optional - defaults provided)
# ===========================================
# POSTGRES_USER=servicedesk
# POSTGRES_PASSWORD=servicedesk
# POSTGRES_DB=servicedesk

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@yourdomain.com
MAIL_FROM_NAME=Service Desk

# ===========================================
# AI SERVICES (Optional)
# ===========================================
# OpenAI API Key (for GPT features)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic API Key (for Claude features)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# ===========================================
# PUSH NOTIFICATIONS (Optional)
# ===========================================
PUSH_ENABLED=false
FCM_SERVER_KEY=your-firebase-server-key

# ===========================================
# SMS NOTIFICATIONS (Optional - Twilio)
# ===========================================
SMS_ENABLED=false
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# ===========================================
# WHATSAPP INTEGRATION (Optional)
# ===========================================
WHATSAPP_BUSINESS_ACCOUNT_ID=your-whatsapp-business-id
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token

# ===========================================
# TELEGRAM INTEGRATION (Optional)
# ===========================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# ===========================================
# MONITORING (Optional)
# ===========================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
